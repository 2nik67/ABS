<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="1.0E8" tabMaxWidth="1.0E8" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientbody.ClientController">
  <tabs>
      <Tab id="informationTab" fx:id="informationTab" closable="false" text="Information">
         <content>
            <ScrollPane fitToHeight="true" fitToWidth="true">
               <content>
                  <SplitPane dividerPositions="0.5">
                     <items>
                        <VBox minHeight="-Infinity" minWidth="-Infinity">
                           <children>
                              <TreeView fx:id="loansTreeView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="212.0" prefWidth="248.0" VBox.vgrow="SOMETIMES">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TreeView>
                              <TreeView id="investmentsTreeView" fx:id="investmentsTreeView" prefHeight="212.0" prefWidth="248.0" VBox.vgrow="SOMETIMES">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TreeView>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                 <children>
                                    <Button id="depositBtn" fx:id="depositBtn" mnemonicParsing="false" onAction="#depositBtnOnAction" text="Deposit" HBox.hgrow="NEVER">
                                       <HBox.margin>
                                          <Insets bottom="10.0" right="15.0" top="10.0" />
                                       </HBox.margin></Button>
                                    <Button id="withdrawBtn" fx:id="withdrawBtn" mnemonicParsing="false" onAction="#withdrawBtnOnAction" text="Withdraw" HBox.hgrow="NEVER">
                                       <HBox.margin>
                                          <Insets bottom="10.0" left="15.0" top="10.0" />
                                       </HBox.margin></Button>
                                 </children>
                              </HBox>
                              <TableView fx:id="transactionTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
                                <columns>
                                  <TableColumn fx:id="yazTableColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="36.0" prefWidth="53.0" text="Yaz" />
                                    <TableColumn fx:id="beforeChangeTableColumn" prefWidth="88.0" text="Before Change" />
                                  <TableColumn fx:id="moneyTableColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="78.0" prefWidth="94.0" sortable="false" text="Money" />
                                    <TableColumn fx:id="afterChangeTableColumn" editable="false" maxWidth="133.0" minWidth="85.0" prefWidth="85.0" resizable="false" sortable="false" text="After Change" />
                                </columns>
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TableView>
                           </children>
                        </VBox>
                     </items>
                  </SplitPane>
               </content>
            </ScrollPane>
         </content>
      </Tab>
    <Tab id="scrambleTab" fx:id="scrambleTab" text="Scramble">
         <content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
             <center>
               <fx:include fx:id="scrambleTabComponent" source="../scrambletab/ScrambleTab.fxml" BorderPane.alignment="CENTER" />
             </center>
            </BorderPane>
         </content></Tab>
    <Tab id="paymentTab" fx:id="paymentTab" text="Payment">
         <content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <fx:include fx:id="paymentTabComponent" source="../paymenttab/PaymentTab.fxml" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </content></Tab>
  </tabs>
</TabPane>
